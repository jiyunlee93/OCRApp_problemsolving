<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9999">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:background="#FF9999">
        <Button
            android:id="@+id/btn_addTestPaper"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Add testpaper"
            android:onClick="onClick"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/btn_startTest_temp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 1"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_startTest_temp2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 2"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_startTest_temp3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 3"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_startTest_temp4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 4"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_startTest_temp5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 5"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_startTest_temp6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TEST 6"
            android:onClick="onClick"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#FF9999">
        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="HOME"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_startTest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TEST START !!"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="2"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_myMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MY MENU"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>